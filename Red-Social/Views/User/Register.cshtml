@using Red_Social.Core.Application.ViewModels.Users
@model SaveUserViewModel


@{
    bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Register";
}



<!-- Section: Design Block -->
<section class="text-center text-lg-start">
    <style>
        .cascading-right {
            margin-right: -50px;
        }

        }
    </style>

    <!-- Jumbotron -->
    <div class="container py-4">
        <div class="row g-0 align-items-center">
            <div class="col-lg-6 mb-5 mb-lg-0">
                <div class="card cascading-right" style="
            background: hsla(0, 0%, 100%, 0.55);
            backdrop-filter: blur(30px);
            ">
                    <div class="card-body p-5 shadow-5 text-center">
                        <h2 class="title fw-bold mb-5">Sign up now</h2>

                        <form method="post" asp-controller="User" asp-action="Register" enctype="multipart/form-data">
                            <!-- 2 column grid layout with text inputs for the first and last names -->
                            <div class="row">
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label asp-for="Name" class="form-label" for="form3Example1">Name:</label>
                                        <input asp-for="Name" type="text" id="form3Example1" class="form-control" />
                                        <span asp-validation-for="Name" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-4">
                                    <div class="form-outline">
                                        <label asp-for="LastName" class="form-label" for="form3Example2">Last name</label>
                                        <input asp-for="LastName" type="text" id="form3Example2" class="form-control" />
                                        <span asp-validation-for="LastName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <!-- Upload ProfilePhoto -->
                            <div class="form-outline mb-4">
                                <label asp-for="File" class="form-label">Seleccione una Foto:</label>
                                <input required asp-for="File" class="form-control" accept="image/*" />
                                @*                                <span asp-validation-for="File" class="text-danger"></span>
                                *@
                            </div>


                            <!-- Email input -->
                            <div class="form-outline mb-4">
                                <label asp-for="Email" class="form-label" for="form3Example3">Email address</label>
                                <input asp-for="Email" id="form3Example3" class="form-control" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <!-- Phone input -->
                            <div class="form-outline mb-4">
                                <label asp-for="Phone" class="form-label" for="form3Example3">Phone</label>
                                <input asp-for="Phone" id="form3Example3" class="form-control" />
                                <span asp-validation-for="Phone" class="text-danger"></span>
                            </div>

                            <!-- Username input -->
                            <div class="form-outline mb-4">
                                <label asp-for="Username" class="form-label" for="form3Example3">Username</label>
                                <input asp-for="Username" id="form3Example3" class="form-control" />
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>


                            <!-- Password input -->
                            <div class="form-outline mb-4">
                                <label asp-for="Password" class="form-label" for="form3Example4">Password</label>
                                <input asp-for="Password" type="password" id="form3Example4" class="form-control" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <!--Confirm Password input -->
                            <div class="form-outline mb-4">
                                <label asp-for="ConfirmPassword" class="form-label" for="form3Example4">Confirm Password</label>
                                <input asp-for="ConfirmPassword" id="form3Example4" class="form-control" />
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>

                            </div>


                            <!-- Submit button -->
                            <button type="submit" class="boton btn  btn-block mt-6">
                                Sign up
                            </button>
                            <a asp-controller="User" asp-action="Index" class="btn btn-warning">Volver atras</a>


                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6 mb-5 mb-lg-0">
                <img src="https://mdbootstrap.com/img/new/ecommerce/vertical/004.jpg" class="w-100 rounded-4 shadow-4"
                     alt="" />
            </div>
        </div>
    </div>
    <!-- Jumbotron -->
</section>
<!-- Section: Design Block -->