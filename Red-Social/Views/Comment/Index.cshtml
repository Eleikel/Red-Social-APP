@using Red_Social.Controllers;
@using Red_Social.Core.Application.ViewModels.Comments;
@model SaveCommentViewModel

@{

    Model.PostId = ViewBag.postId;
}




<div class="container-fluid">



    <form method="post" asp-controller="Comment" asp-action="Create" class="mb-6">


        <div class="row d-flex justify-content-center mb-5">
            <div class="col-md-12 col-lg-10 col-xl-8">
                <div class="card">

                    <div class="card-footer py-3 border-0" style="background-color: #f8f9fa;">
                        <div class="d-flex flex-start w-100">

                            <div class="form-outline w-100">
                                <textarea asp-for="@Model.Text" name="Text" class="form-control" id="textAreaExample" rows="4"
                                          style="background: #fff;"></textarea>
                                <label asp-for="@Model.Text" class="form-label" for="textAreaExample">Comentar</label>
                                <span asp-validation-for="@Model.Text" class="text-danger"></span>

                            </div>

                            <input type="hidden" asp-for="@Model.PostId" />

                        </div>
                        <div class="float-end mt-2 pt-1">
                            <button type="submit" class="btn btn-primary btn-sm">
                                Enviar Comentario
                            </button>

                            <a asp-controller="Post" asp-action="Index" class="btn btn-outline-primary btn-sm">Volver</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>


    </form>

</div>

<div class="row d-flex justify-content-center mb-5">

    <h1 class="display-4">Todos Los comentarios</h1>
</div>



<div class="row d-flex justify-content-center mt-6">

    @foreach (CommentViewModel item in ViewBag.Comments)
    {

        <div class="col-md-8 mt-6 ">
            <div class="card flex-md-row mb-4 box-shadow h-md-250" style="width: auto; height: auto;">
                <div class="card-body d-flex">
                    <img src="@item.ProfilePhotoUrl" alt="..." class="rounded-circle" style="width: 30px; height: 30px;">
                    <p class="card-text font-italic mb-auto  ml-2">@item.Text</p>
                </div>
            </div>
        </div>
    }


</div>









