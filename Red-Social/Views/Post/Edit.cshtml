@using Red_Social.Core.Application.ViewModels.Post;
@model SavePostViewModel
@{
    //bool editMode = Model.Id == 0 ? false : true;
    ViewData["Title"] = "Edit Post";

}

<div class="row">

    <div class="col-6 offset-3">
        <div class="card">
            <div class="card-header bg-danger text-light">
                <h4>Editar Post</h4>
            </div>
            <div class="card-body">


                <form method="post" asp-controller="Post" asp-action="Edit" enctype="multipart/form-data">

                    <div class="mb-3">
                        <label asp-for="@Model.File" name="File" class="form-label">Seleccione un archivo:</label>
                        <input asp-for="@Model.File" name="File" class="form-control" />
                        <span asp-validation-for="@Model.File" name="File" class="text-danger"></span>
                        <img src="@Model.ImageUrl" class="mt-3 text-center" style="width: 400px; height: 300px;">

                    </div>

                    <div class="form-group">
                        <label asp-for="@Model.Text" name="Text">Añade tu comentario:</label>
                        <textarea asp-for="@Model.Text" name="Text" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                    </div>

                    <input type="hidden" asp-for="@Model.Id" name="Id" />

                    <button type="submit" class="btn btn-primary">Guardar</button>
                    <a asp-controller="Post" asp-action="Index" class="btn btn-warning">Cancelar</a>

                </form>

            </div>
        </div>
    </div>

</div>



